FROM python:3.11-slim
WORKDIR /app
COPY apps/api-backend /app
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir fastapi "uvicorn[standard]" httpx pydantic-settings python-dotenv \
    redis rq psycopg[binary] sqlalchemy alembic tenacity pytest pytest-asyncio
EXPOSE 8000
CMD ["uvicorn", "app.main:app", "--host","0.0.0.0", "--port","8000"]